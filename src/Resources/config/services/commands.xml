<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="setono_sylius_bulk_specials.command.check_active"
                 class="Setono\SyliusBulkSpecialsPlugin\Command\CheckActiveCommand">
            <argument type="service" id="setono_sylius_bulk_specials.repository.special" />
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_handler.special" />
            <tag name="console.command" />
        </service>

        <service id="setono_sylius_bulk_specials.command.assign_specials"
                 class="Setono\SyliusBulkSpecialsPlugin\Command\AssignSpecialsCommand">
            <argument type="service" id="setono_sylius_bulk_specials.command_bus"/>
            <argument type="service" id="sylius.repository.product" />
            <tag name="console.command" />
        </service>

        <service id="setono_sylius_bulk_specials.command.product_recalculate"
                 class="Setono\SyliusBulkSpecialsPlugin\Command\RecalculateProductCommand">
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_handler.product" />
            <tag name="console.command" />
        </service>

        <service id="setono_sylius_bulk_specials.command.special_recalculate"
                 class="Setono\SyliusBulkSpecialsPlugin\Command\RecalculateSpecialCommand">
            <argument type="service" id="setono_sylius_bulk_specials.repository.special" />
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_handler.special" />
            <tag name="console.command" />
        </service>

    </services>
</container>
