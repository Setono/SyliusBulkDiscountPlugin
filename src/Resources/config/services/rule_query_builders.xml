<?xml version="1.0" encoding="UTF-8"?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="setono_sylius_bulk_specials.special_rule_query_builder.has_taxon"
                 class="Setono\SyliusBulkSpecialsPlugin\QueryBuilder\Rule\HasTaxonQueryBuilderRule">
            <tag name="setono_sylius_bulk_specials.query_builder_rule"
                 type="has_taxon"/>
        </service>

        <service id="setono_sylius_bulk_specials.special_rule_query_builder.contains_product"
                 class="Setono\SyliusBulkSpecialsPlugin\QueryBuilder\Rule\ContainsProductQueryBuilderRule">
            <tag name="setono_sylius_bulk_specials.query_builder_rule"
                 type="contains_product"/>
        </service>

        <service id="setono_sylius_bulk_specials.special_rule_query_builder.contains_products"
                 class="Setono\SyliusBulkSpecialsPlugin\QueryBuilder\Rule\ContainsProductsQueryBuilderRule">
            <tag name="setono_sylius_bulk_specials.query_builder_rule"
                 type="contains_products"/>
        </service>

    </services>
</container>
