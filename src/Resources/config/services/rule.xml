<?xml version="1.0" encoding="UTF-8"?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_catalog_promotions.rule.has_taxon"
                 class="Setono\SyliusCatalogPromotionsPlugin\Rule\HasTaxonRule">
            <tag name="setono_sylius_catalog_promotions.rule"
                 type="has_taxon"
                 label="setono_sylius_catalog_promotions.form.promotion_rule.has_taxon"
                 form-type="Setono\SyliusCatalogPromotionsPlugin\Form\Type\Rule\HasTaxonConfigurationType"/>
        </service>

        <service id="setono_sylius_catalog_promotions.rule.contains_product"
                 class="Setono\SyliusCatalogPromotionsPlugin\Rule\ContainsProductRule">
            <tag name="setono_sylius_catalog_promotions.rule"
                 type="contains_product"
                 label="setono_sylius_catalog_promotions.form.promotion_rule.contains_product"
                 form-type="Setono\SyliusCatalogPromotionsPlugin\Form\Type\Rule\ContainsProductConfigurationType"/>
        </service>

        <service id="setono_sylius_catalog_promotions.rule.contains_products"
                 class="Setono\SyliusCatalogPromotionsPlugin\Rule\ContainsProductsRule">
            <tag name="setono_sylius_catalog_promotions.rule"
                 type="contains_products"
                 label="setono_sylius_catalog_promotions.form.promotion_rule.contains_products"
                 form-type="Setono\SyliusCatalogPromotionsPlugin\Form\Type\Rule\ContainsProductsConfigurationType"/>
        </service>
    </services>
</container>
