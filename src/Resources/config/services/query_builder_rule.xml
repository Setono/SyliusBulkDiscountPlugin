<?xml version="1.0" encoding="UTF-8"?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="setono_sylius_bulk_specials.special_rule_query_builder.has_taxon"
                 class="Setono\SyliusBulkSpecialsPlugin\QueryBuilderRule\HasTaxonQueryBuilderRule">
            <tag name="setono_sylius_bulk_specials.query_builder_rule"
                 type="has_taxon"
                 label="setono_sylius_bulk_specials.form.special_rule.has_taxon"
                 form-type="Setono\SyliusBulkSpecialsPlugin\Form\Type\Special\Rule\HasTaxonConfigurationType"/>
        </service>

        <service id="setono_sylius_bulk_specials.special_rule_query_builder.contains_product"
                 class="Setono\SyliusBulkSpecialsPlugin\QueryBuilderRule\ContainsProductQueryBuilderRule">
            <tag name="setono_sylius_bulk_specials.query_builder_rule"
                 type="contains_product"
                 label="setono_sylius_bulk_specials.form.special_rule.contains_product"
                 form-type="Setono\SyliusBulkSpecialsPlugin\Form\Type\Special\Rule\ContainsProductConfigurationType"/>
        </service>

        <service id="setono_sylius_bulk_specials.special_rule_query_builder.contains_products"
                 class="Setono\SyliusBulkSpecialsPlugin\QueryBuilderRule\ContainsProductsQueryBuilderRule">
            <tag name="setono_sylius_bulk_specials.query_builder_rule"
                 type="contains_products"
                 label="setono_sylius_bulk_specials.form.special_rule.contains_products"
                 form-type="Setono\SyliusBulkSpecialsPlugin\Form\Type\Special\Rule\ContainsProductsConfigurationType"/>
        </service>

    </services>
</container>
