<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="setono_sylius_bulk_discount.form.type.discount.validation_groups" type="collection">
            <parameter>setono_sylius_bulk_discount</parameter>
        </parameter>
        <parameter key="setono_sylius_bulk_discount.form.type.discount_rule.validation_groups" type="collection">
            <parameter>setono_sylius_bulk_discount</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="setono_sylius_bulk_discount.form_registry.rule" class="Sylius\Bundle\ResourceBundle\Form\Registry\FormTypeRegistry" />

        <service id="setono_sylius_bulk_discount.form.type.discount"
                 class="Setono\SyliusBulkDiscountPlugin\Form\Type\DiscountType">
            <argument>%setono_sylius_bulk_discount.model.discount.class%</argument>
            <argument>%setono_sylius_bulk_discount.form.type.discount.validation_groups%</argument>
            <tag name="form.type" />
        </service>

        <service id="setono_sylius_bulk_discount.form.type.discount_rule"
                 class="Setono\SyliusBulkDiscountPlugin\Form\Type\DiscountRuleType">
            <argument>%setono_sylius_bulk_discount.model.discount_rule.class%</argument>
            <argument>%setono_sylius_bulk_discount.form.type.discount_rule.validation_groups%</argument>
            <argument type="service" id="setono_sylius_bulk_discount.form_registry.rule" />
            <tag name="form.type" />
        </service>

        <service id="setono_sylius_bulk_discount.form.type.discount_rule.collection"
                 class="Setono\SyliusBulkDiscountPlugin\Form\Type\DiscountRuleCollectionType">
            <argument type="service" id="setono_sylius_bulk_discount.registry.rule" />
            <tag name="form.type" />
        </service>

        <service id="setono_sylius_bulk_discount.form.type.discount_rule_choice"
                 class="Setono\SyliusBulkDiscountPlugin\Form\Type\DiscountRuleChoiceType">
            <argument>%setono_sylius_bulk_discount.discount_rules%</argument>
            <tag name="form.type" />
        </service>

        <!-- Rules -->
        <service id="sylius.form.type.discount_rule.has_taxon_configuration"
                 class="Setono\SyliusBulkDiscountPlugin\Form\Type\Rule\HasTaxonConfigurationType">
            <argument type="service" id="sylius.form.type.data_transformer.taxons_to_codes" />
            <tag name="form.type" />
        </service>

        <service id="sylius.form.type.discount_rule.contains_products_configuration"
                 class="Setono\SyliusBulkDiscountPlugin\Form\Type\Rule\ContainsProductsConfigurationType">
            <argument type="service" id="sylius.form.type.data_transformer.products_to_codes" />
            <tag name="form.type" />
        </service>

        <service id="sylius.form.type.discount_rule.contains_product_configuration"
                 class="Setono\SyliusBulkDiscountPlugin\Form\Type\Rule\ContainsProductConfigurationType">
            <argument type="service" id="sylius.repository.product" />
            <tag name="form.type" />
        </service>
    </services>
</container>
